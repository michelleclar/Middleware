<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.carl.mybatis.mapper.EmpMapper">
    <!--处理多对一-->
    <resultMap id="empAndDeptResultMap" type="Emp">
        <id column="emp_id" property="empId"></id>
        <result column="emp_name" property="empName"></result>
        <result column="emp_age" property="empAge"></result>
        <result column="emp_gender" property="empGender"/>
        <result column="dept_id" property="dept.deptId"/>
        <result column="dept_name" property="dept.deptName"/>
    </resultMap>

    <resultMap id="empResultMap" type="Emp">
        <id column="emp_id" property="empId"></id>
        <result column="emp_name" property="empName"></result>
        <result column="emp_age" property="empAge"></result>
        <result column="emp_gender" property="empGender"/>
        <association property="dept" javaType="Dept">
            <id column="dept_id" property="deptId"></id>
            <result column="dept_name" property="deptName"></result>
        </association>
    </resultMap>

    <resultMap id="empAndDeptByStepOne" type="Emp">
        <id column="emp_id" property="empId"></id>
        <result column="emp_name" property="empName"></result>
        <result column="emp_age" property="empAge"></result>
        <result column="emp_gender" property="empGender"/>
        <!--fetchType:在开启延迟加载的环境中,设置属性来控制是否延迟加载
        eager(立即加载)lazy(延迟加载)-->
        <association property="dept" fetchType="eager" select="com.carl.mybatis.mapper.DeptMapper.empAndDeptByStepTwo" column="dept_id">
        </association>
    </resultMap>
    <select id="getEmpAndDeptByEmpId" resultMap="empResultMap">
        select emp.*,dept.dept_name
        from t_emp emp
        left join t_dept dept
        on emp.dept_id = dept.dept_id
        where emp.emp_id = #{empId};
    </select>

    <select id="getEmpAndDeptByStepOne" resultMap="empAndDeptByStepOne">
        select *
        from t_emp
        where emp_id = #{empId};
    </select>


</mapper>