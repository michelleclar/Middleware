<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.carl.mybatis.mapper.DeptMapper">
    <resultMap id="deptAndEmpResultMap" type="Dept">
        <id property="deptId" column="dept_id"></id>
        <result property="deptName" column="dept_name"></result>
        <!--
        ofType：设置collection标签所处理的集合属性中存储数据的类型
        -->
        <collection property="emps" select="com.carl.mybatis.mapper.EmpMapper.selectByDeptId" column="dept_id">
        </collection>
    </resultMap>
<select id="empAndDeptByStepTwo" resultType="Dept">
    select *
    from t_dept where dept_id = #{deptId};
</select>
</mapper>